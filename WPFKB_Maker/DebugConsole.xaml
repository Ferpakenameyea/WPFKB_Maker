<Window x:Class="WPFKB_Maker.DebugConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFKB_Maker"
        mc:Ignorable="d"
        Title="DebugConsole" Height="450" Width="800">
    <Grid>
        <Border Margin="20,20,20,20" BorderThickness="1" BorderBrush="Black">
            <Border Margin="2,2,2,2" BorderThickness="1" BorderBrush="Black">
                <ScrollViewer x:Name="consoleScroller" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="Black">
                    <TextBlock x:Name="consoleBox" Foreground="Green" Text="控制台" Margin="10,10,10,10" FontSize="17" FontFamily="Consolas"/>
                </ScrollViewer>
            </Border>
        </Border>
    </Grid>
</Window>
